}
.area_picture_btn:hover{
    -webkit-box-shadow: -1px 1px 42px 20px rgba(201,140,201,1);
    -moz-box-shadow: -1px 1px 42px 20px rgba(201,140,201,1);
    box-shadow: -1px 1px 42px 20px rgba(201,140,201,1);
  
}
.area_picture_btn img{
    width: 100%;
    height: 290px;
    border-radius: 15px 15px 15px 15px
}