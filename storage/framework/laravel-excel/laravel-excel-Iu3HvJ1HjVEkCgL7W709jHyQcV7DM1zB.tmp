*{
    padding: 0;
    margin: 0;
}
body{
    height:100vh;
    background-image: url(image/bg.png);
    background-position:bottom;
	background-repeat: no-repeat;
	background-size:cover;
}
.navbar_new{
    height: 50px;
    width: 100%;
    float: right;
}
.sign-in{
	width:100px;
	height: 35px;
	border-radius: 10px;
	border:1px solid #3d3d3e;
	color:#3d3d3e;
	display: flex;
	justify-content: center;
	align-items: center;
	font-family: calibri;
	font-weight: bold;
	box-shadow:  2px 2px 6px rgba(0,0,0,0.1);
    float: right;
    margin-right: 1%;
    position: relative;
    top: 50%;
    transform: translate(0,-50%);
}
.sign-in:hover{
	background-color:#4530c3;
	color:#FFFFFF;
	transition: all ease 0.2s;
}
.area_picture{
    float: left;
    height: 320px;
    width: 100%;
    border:none;
}
.area_picture_btn{
    height: 290px;
    width: 15%;
    background-color: rebeccapurple;
    border-radius: 15px 15px 15px 15px;
    border:none;
    -webkit-box-shadow: 10px 13px 33px -8px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 13px 33px -8px rgba(0,0,0,0.75);
    box-shadow: 10px 13px 33px -8px rgba(0,0,0,0.75);   
    float: left;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 10px;
    cursor: pointer;
    transition: 0.25s box-shadow, 0.25s -webkit-transform;
}
